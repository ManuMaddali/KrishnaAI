# KrishnaAI Configuration 
# Copy this file to .env and fill in the values

# API Keys (Required)
# Get your key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Security Settings
# Generate a secure random key with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=generate_a_secure_random_key_here

# OpenAI Model Configuration
# Only change these if you need to use different models
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.6
OPENAI_MAX_TOKENS=500

# CORS Settings (comma-separated list)
# For security, only list domains that should access your API
CORS_ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000,http://localhost:8000,http://127.0.0.1:8000,http://localhost:3000

# Database Settings
DATABASE_PATH=db/krishna_memory.db 